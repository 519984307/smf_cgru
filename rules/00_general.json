{
"root":".",
"rules":"rules",
"assets":["project","scene","shot"],
"assets_seek":{
	"project":["/"],
	"scene":["/[project]/SCENES/","/[project]/SHOTS/"],
	"shot":["/[project]/SCENES/[scene]/","/[project]/SHOTS/[scene]/"]
},

"assets_data":{
"shot":{
	"source":{
		"path":["SOURCE/SCAN"],
		"cmdexec":"play_sequence"
	},
	"result":{
		"path":["RESULT/DPX","RESULT/JPG"],
		"cmdexec":"play_sequence"
	},
	"dailies":["RESULT/DAILIES"]
}
},

"OS_unix":{
	"open":"nautilus \"@PATH@\"",
	"cmdexec":{
		"play_sequence":[
			{"name":"DJV View",
				"cmd":"djv_view @PATH@"},
			{"name":"ls -l",
				"cmd":"xterm -e \"cd @PATH@; ls -l; read -s -n 1\""},
			{"name":"open",
				"cmd":"nautilus \"@PATH@\""}
		]
	}
},
"OS_windows":{
	"open":"start @PATH@",
	"cmdexec":{
		"play_sequence":[
			{"name":"Pdplayer",
				"cmd":"pdplayer @PATH@"},
			{"name":"Pd++",
				"cmd":"pdplayer --attach @PATH@"},
			{"name":"open",
				"cmd":"start @PATH@"}
		]
	}
},

"thumbnail":{
	"filename":"thumbnail.jpg",
	"create_cmd":"rules/thumbnail.py -i \"@INPUT@\" -o \"@OUTPUT@\""
},

"company":"CGRU",
"fps":"24",
"dailies":
{
	"resolution":"1280x720",
	"fps":"25",
	"codec":"photojpg_high",
	"template":"dailies_withlogo",
	"slate":"dailies_slate",
	"naming":"(s)_(v)_(d)",
	"logo_slate_path":"logo.png",
	"logo_slate_size":25,
	"logo_slate_grav":"SouthEast",
	"logo_frame_path":"logo.png",
	"logo_frame_size":10,
	"logo_frame_grav":"North",
	"activity":"comp",

	"af_capacity":500
}
}
