{
"root":".",
"rufolder":"rules",
"company":"CGRU",
"playlist":"rules/playlist.json",

"tags":{
	"done"    :{"title":"DONE"},
	"error"   :{"title":"ERROR"},
	"hold"    :{"title":"HOLD"},
	"started" :{"title":"Started"},
	"animatic":{"title":"Animatic"}
},

"comments":{
	"message":{"title":"Message","color":[150,150,150]},
	"report" :{"title":"Report" ,"color":[200,200,100]},
	"review" :{"title":"Review" ,"color":[200,100,100]},
	"generic":{"title":"generic"}
},

"assets":{
"project":{
	"seek":["/"]
},
"scenes":{
	"seek":["[project]/SCENES","[project]/SHOTS"],
	"name":"",
	"thumbnails":1
},
"scene":{
	"seek":["[scenes]/"],
	"thumbnails":0
},
"shot":{
	"seek":["[scene]/"],
	"source":{
		"path":["SOURCE/SCAN"]
	},
	"result":{
		"path":["RESULT/DPX","RESULT/JPG"]
	},
	"dailies":{
		"path":["RESULT/DAILIES"]
	}
}
},

"OS_unix":{
	"open":"nautilus \"@PATH@\"",
	"cmdexec":{
		"play_sequence":[
			{"name":"DJV View",
				"cmd":"djv_view @PATH@"},
			{"name":"ls -l",
				"cmd":"xterm -e \"cd @PATH@; ls -l; read -s -n 1\""},
			{"name":"open",
				"cmd":"nautilus \"@PATH@\""}
		]
	}
},
"OS_windows":{
	"open":"start @PATH@",
	"cmdexec":{
		"play_sequence":[
			{"name":"Pdplayer",
				"cmd":"pdplayer --fps=@FPS@ @PATH@"},
			{"name":"Pd++",
				"cmd":"pdplayer --fps=@FPS@ --attach @PATH@"},
			{"name":"open",
				"cmd":"start @PATH@"}
		]
	}
},

"thumbnail":{
	"filename":"thumbnail.jpg",
	"create_cmd":"rules/thumbnail.py -i \"@INPUT@\" -t 600 -o \"@OUTPUT@\""
},

"avconv":"ffmpeg",
"movtypes":["mov","avi","mp4","mpg","mpeg"],
"skipfiles":[".","Thumbs.db"],

"fps":"24",
"dailies":
{
	"resolution":"1280x720",
	"fps":"25",
	"codec":"photojpg_high",
	"template":"dailies_withlogo",
	"slate":"dailies_slate",
	"naming":"(s)_(v)_(d)",
	"logo_slate_path":"logo.png",
	"logo_slate_size":25,
	"logo_slate_grav":"SouthEast",
	"logo_frame_path":"logo.png",
	"logo_frame_size":10,
	"logo_frame_grav":"North",
	"activity":"comp",

	"af_capacity":500
}
}
