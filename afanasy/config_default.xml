<!-- Copy this file into 'config.xml' and setup you own -->
<afanasy>

<!-- General -->
   <timeformat>%a %d %b %H:%M.%S</timeformat>
<!-- 'strftime' function format
http://www.cplusplus.com/reference/clibrary/ctime/strftime
-->
   <filenamesizemax>250</filenamesizemax>
   <cmdprefix></cmdprefix>
<!--
If 'AF_CMD_PREFIX' environment variable exists, it will be used.
With such prefix commands are launched from current directory.
Prefix './' used in examples and set through environment.
   <cmdprefix>./</cmdprefix>
So each path (project, asset) can have individual software setup.
-->
   <priority>99</priority>
   <maxrunningtasks>-1</maxrunningtasks>

<!-- Client & Server -->
   <servername>127.0.0.1</servername>
<!-- Put server name or IP address in this var
    <servername>localhost</servername>
-->
    <!-- Acceptable ip addresses masks, space separated.
    Mask should have at least one '.' for IPv4 or one ':' for IPv6. -->
    <serveripmask>*.* 127.0.0.1 192.168.* *:* 0:0:0:0:0:0:0:1 FC00:* FD00:*</serveripmask>
	<!-- Magic number, default value is '1', value '0' is reserved and means magic number mismatch. -->
	<magic_number>1</magic_number>
   <serverport>51000</serverport>
   <clientport>51001</clientport>
   <srv_so_rcvtimeo_sec>2</srv_so_rcvtimeo_sec>
   <srv_so_sndtimeo_sec>2</srv_so_sndtimeo_sec>
<!-- 
   <tempdirectory>/var/tmp/afanasy</tempdirectory>
 -->
 
<!-- Job -->
   <task_default_capacity>1000</task_default_capacity>
   <task_update_timeout>300</task_update_timeout>
   <task_log_linesmax>100</task_log_linesmax>
   <job_log_linesmax>100</job_log_linesmax>

<!-- Render -->
<!--
	Shell to run a command:
	<cmd_shell>/bin/sh -c</cmd_shell>
	Default is "/bin/bash -c" to UNIX
	and "cmd.exe /c" for MS Windows.
-->
   <render_default_capacity>1000</render_default_capacity>
   <render_default_maxtasks>5</render_default_maxtasks>
   <render_networkif>(?!lo$).*</render_networkif>
   <render_hddspace_path>/</render_hddspace_path>
   <render_iostat_device>sda</render_iostat_device>
<!--
Custom resources meters:
example - simple resource meter for an example only
iostat - parce output of linux 'iostat' command, specify device in "render_customiostat_devices" varibale
   <render_resclasses>example;iostat</render_resclasses>
   <render_customiostat_devices>sda</render_customiostat_devices>
   - to specify several devices use regular expressions, for example "sda[2-4]"
';' - separate classes character
-->
   <render_nice>10</render_nice>
   <render_update_sec>5</render_update_sec>
   <render_updatetaskperiod>1</render_updatetaskperiod>
   <render_zombietime>60</render_zombietime>
   <render_connectretries>3</render_connectretries>
   <render_waitforconnected>15000</render_waitforconnected>
   <render_waitforreadyread>15000</render_waitforreadyread>
   <render_waitforbyteswritten>15000</render_waitforbyteswritten>
   <render_log_linesmax>100</render_log_linesmax>
   <render_logs_rotate>10</render_logs_rotate>
   <render_exec>afrender</render_exec>
   <render_cmd_reboot>reboot</render_cmd_reboot>
   <render_cmd_shutdown>shutdown -P 1 afrequest</render_cmd_shutdown>
<!-- Reboot and Shutdown for MS Windows:
   <render_cmd_reboot>shutdown /r</render_cmd_reboot>
   <render_cmd_shutdown>shutdown /s</render_cmd_shutdown>
-->
   <render_cmd_wolsleep>wolsleep</render_cmd_wolsleep>
   <render_cmd_wolwake>wolwake</render_cmd_wolwake>
<!-- On UNIX sleep command usually needs root privileges,
try to use "sudo wolsleep" and add a line in /etc/sudoers:
render ALL = (ALL) NOPASSWD: /opt/cgru/bin/wolsleep
Or configure your own way to sleep.
On MS Windows it should be something like:
   <render_cmd_wolsleep>cmd.exe /c wolsleep</render_cmd_wolsleep>
-->

<!-- User -->
   <errors_avoid_host>3</errors_avoid_host>
   <task_error_retries>3</task_error_retries>
   <task_errors_same_host>3</task_errors_same_host>
   <errors_forgivetime>18000</errors_forgivetime>
   <user_zombietime>2</user_zombietime>
   <user_log_linesmax>100</user_log_linesmax>
   <user_logs_rotate>10</user_logs_rotate>

<!-- Watch -->
   <pswd_visor>1832116180fdc61b64fd978401e462e9</pswd_visor>
   <pswd_god>73bcaaa458bff0d27989ed331b68b64d</pswd_god>
<!-- Commands argument = "@ARG@"
     To clear a list specify an empty element text.
-->
   <previewcmds>nuke -v "@ARG@"</previewcmds>
   <previewcmds>imf_disp "@ARG@"</previewcmds>
   <previewcmds>mplay "@ARG@"</previewcmds>
<!-- Example for MS Windows:
     <rendercmds></rendercmds>
     <rendercmds>vncviewer @ARG@</rendercmds>
     <rendercmds>start ping /t @ARG@</rendercmds>
     <rendercmds>start ping /t @IP@</rendercmds>
-->
<!-- Commands arguments:
      @ARG@ - will be replaced with render name
      @ASK@ - raise dialog to ask a string
      @IP@  - will be replaced with render ip address
     To clear a list specify an empty element text.
-->
   <rendercmds>vncviewer @ARG@</rendercmds>
   <rendercmds>xterm -e "ping @ARG@; read -s -n 1"</rendercmds>
   <rendercmds>xterm -e "ping @IP@; read -s -n 1"</rendercmds>
   <rendercmds_admin>xterm -e "ssh @ARG@; read -s -n 1"</rendercmds_admin>
   <rendercmds_admin>xterm -e "ssh @ARG@ \"@ASK@\"; read -s -n 1"</rendercmds_admin>
   <watch_connectretries>3</watch_connectretries>
   <watch_waitforconnected>8000</watch_waitforconnected>
   <watch_waitforreadyread>8000</watch_waitforreadyread>
   <watch_waitforbyteswritten>8000</watch_waitforbyteswritten>
   <watch_refreshinterval>5</watch_refreshinterval>

<!-- Monitor -->
   <monitor_updateperiod>10</monitor_updateperiod>
   <monitor_zombietime>40</monitor_zombietime>
   <monitor_connectretries>3</monitor_connectretries>
   <monitor_waitforconnected>8000</monitor_waitforconnected>
   <monitor_waitforreadyread>8000</monitor_waitforreadyread>
   <monitor_waitforbyteswritten>8000</monitor_waitforbyteswritten>

<!-- Talk -->
   <talk_updateperiod>5</talk_updateperiod>
   <talk_zombietime>18</talk_zombietime>
   <talk_connectretries>3</talk_connectretries>
   <talk_waitforconnected>8000</talk_waitforconnected>
   <talk_waitforreadyread>8000</talk_waitforreadyread>
   <talk_waitforbyteswritten>8000</talk_waitforbyteswritten>

<!-- Database -->
<!-- sting to pass to PQconnectdb http://www.postgresql.org/docs/current/static/libpq-connect.html -->
    <db_conninfo>
        host=localhost dbname=afanasy user=afadmin password=AfPassword
    </db_conninfo>
   <db_stringquotes>$$</db_stringquotes>
   <db_stringnamelen>512</db_stringnamelen>
   <db_stringexprlen>4096</db_stringexprlen>

<!-- System job -->
   <sysjob_tasklife>1800</sysjob_tasklife>
   <sysjob_tasksmax>1000</sysjob_tasksmax>
<!-- default services names in any system block is "system"
   <sysjob_wol_service>wakeonlan</sysjob_wol_service>
   <sysjob_postcmd_service>postcmd</sysjob_postcmd_service>
-->
</afanasy>
