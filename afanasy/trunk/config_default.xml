<!-- Copy this file into 'config.xml' and setup you own -->
<afanasy>

<!-- General -->
   <timeformat>ddd dMMM hh:mm.ss</timeformat>
   <filenamesizemax>250</filenamesizemax>
   <cmdprefix></cmdprefix>
<!--
If 'AF_CMD_PREFIX' environment variable exists, it will be used.
With such prefix commands are launched from current directory.
Prefix './' used in examples and set through environment.
   <cmdprefix>./</cmdprefix>
So each path (project, asset) can have individual software setup.
-->
   <priority>99</priority>
   <maxhosts>-1</maxhosts>
   <hostsmask></hostsmask>

<!-- Client & Server -->
   <servername>localhost</servername>
   <serverport>51000</serverport>
   <clientport>51001</clientport>
   <srv_so_rcvtimeo_sec>2</srv_so_rcvtimeo_sec>
   <srv_so_sndtimeo_sec>2</srv_so_sndtimeo_sec>
   <tempdirectory>/var/tmp/afanasy</tempdirectory>

<!-- Job -->
   <task_default_capacity>1000</task_default_capacity>
   <task_update_timeout>300</task_update_timeout>

<!-- Render -->
   <render_default_capacity>1000</render_default_capacity>
   <render_default_maxtasks>5</render_default_maxtasks>
   <render_hddspace_path>/</render_hddspace_path>
   <render_iostat_device>sda</render_iostat_device>
<!--
Custom resources meters:
example - simple resource meter for an example only
iostat - parce output of linux 'iostat' command
   <render_resclasses>example;iostat</render_resclasses>
';' - separate classes character
-->
   <render_exec>afrender</render_exec>
   <render_nice>10</render_nice>
   <render_update_sec>5</render_update_sec>
   <render_updatetaskperiod>1</render_updatetaskperiod>
   <render_zombietime>60</render_zombietime>
   <render_connectretries>3</render_connectretries>
   <render_waitforconnected>15000</render_waitforconnected>
   <render_waitforreadyread>15000</render_waitforreadyread>
   <render_waitforbyteswritten>15000</render_waitforbyteswritten>
   <render_logs_linesmax>100</render_logs_linesmax>
   <render_logs_rotate>10</render_logs_rotate>

<!-- User -->
   <errors_avoid_host>3</errors_avoid_host>
   <task_error_retries>3</task_error_retries>
   <task_errors_same_host>3</task_errors_same_host>
   <user_zombietime>2</user_zombietime>
   <user_logs_linesmax>100</user_logs_linesmax>
   <user_logs_rotate>10</user_logs_rotate>

<!-- Watch -->
   <pswd_visor>1832116180fdc61b64fd978401e462e9</pswd_visor>
   <pswd_god>73bcaaa458bff0d27989ed331b68b64d</pswd_god>
<!-- Commands argument = "@ARG@", separator = " || ". -->
   <previewcmds>nuke -v @ARG@ || imf_disp @ARG@ || mplay @ARG@</previewcmds>
<!-- Example for MS Windows:
   <rendercmds>vncviewer @ARG@ || start ping /t @ARG@</rendercmds>
-->
   <rendercmds>vncviewer @ARG@ || xterm -e "ssh @ARG@; read -s -n 1" || xterm -e "ssh @ARG@ \"@ASK@\"; read -s -n 1" || xterm -e "ping @ARG@; read -s -n 1"</rendercmds>
   <watch_connectretries>3</watch_connectretries>
   <watch_waitforconnected>8000</watch_waitforconnected>
   <watch_waitforreadyread>8000</watch_waitforreadyread>
   <watch_waitforbyteswritten>8000</watch_waitforbyteswritten>
   <watch_refreshinterval>5</watch_refreshinterval>

<!-- Monitor -->
   <monitor_updateperiod>10</monitor_updateperiod>
   <monitor_zombietime>40</monitor_zombietime>
   <monitor_connectretries>3</monitor_connectretries>
   <monitor_waitforconnected>8000</monitor_waitforconnected>
   <monitor_waitforreadyread>8000</monitor_waitforreadyread>
   <monitor_waitforbyteswritten>8000</monitor_waitforbyteswritten>

<!-- Talk -->
   <talk_updateperiod>5</talk_updateperiod>
   <talk_zombietime>18</talk_zombietime>
   <talk_connectretries>3</talk_connectretries>
   <talk_waitforconnected>8000</talk_waitforconnected>
   <talk_waitforreadyread>8000</talk_waitforreadyread>
   <talk_waitforbyteswritten>8000</talk_waitforbyteswritten>

<!-- Database -->
   <db_type>QPSQL</db_type>
   <db_hostname>localhost</db_hostname>
   <db_databasename>afanasy</db_databasename>
   <db_username>afadmin</db_username>
   <db_password>AfPassword</db_password>
   <db_stringquotes>$$</db_stringquotes>
   <db_stringnamelen>512</db_stringnamelen>
   <db_stringexprlen>4096</db_stringexprlen>

</afanasy>
